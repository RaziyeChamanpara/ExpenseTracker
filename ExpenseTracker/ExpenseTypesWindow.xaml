<Window x:Class="ExpenseTracker.ExpenseTypesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:etc="clr-namespace:ExpenseTrackerComponents;assembly=ExpenseTrackerComponents"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="ExpenseTypesWindow" Height="450" Width="800">
    
    <Grid Margin="50">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" 
                  Name="expenseTypesDataGrid"
                  ItemsSource="{Binding}" 
                  AlternatingRowBackground="LightSalmon"
                  AlternationCount="2"
                  AutoGenerateColumns="False" 
                  SelectedCellsChanged="ExpenseTypesDataGrid_SelectedCellsChanged">

            <DataGrid.Columns >
                <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
            </DataGrid.Columns>

        </DataGrid>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal">

            <etc:ExpenseTypesButton Content="Add" 
                                   Click="AddButton_Click"/>

            <etc:ExpenseTypesButton Content="First" 
                                   Click="FirstButton_Click"/>

            <etc:ExpenseTypesButton Content="Next" 
                                   Click="NextButton_Click"/>

            <etc:ExpenseTypesButton Content="Previous" 
                                    Click="PreviousButton_Click"/>

            <etc:ExpenseTypesButton Content="Last" 
                                    Click="LastButton_Click"/>

            <etc:ExpenseTypesButton Content="Delete" 
                      Click="DeleteButton_Click"/>

            <etc:ExpenseTypesButton Content="Edit"
                                Click="EditButton_Click"/>
            
        </StackPanel>
        
    </Grid>
    
</Window>
